#pandify {
  position: relative;
  background-color: $background-color;
  font-family: 'Noto Sans', sans-serif;
  color: $text-color;

  input, .selectize-input {
    font-family: 'Noto Sans', sans-serif;
    color: $text-color;
  }
}

a {
  color: $text-color;
}

#master-container {
  padding-top: 20px;
  padding-bottom: 20px;
  min-width: $min-container-width;
}

#credit {
  position: absolute;
  top: 10px;
  right: 15px;

  a, span {
    color: $unemphasized-color;
    font-size: 0.8em;
  }

  a:hover {
    text-decoration: underline;
  }
}

#logo-header {
  margin-bottom: 20px;

  .logo {
    float: right;
    margin-right: -230px;
  }
}

#main-content {
  position: relative;
  padding: 10px 0 10px 30px;
  min-height: 120px;
  // So that the section:before gradient sits where the border-left would be.
  border-left: 1px solid transparent;
}

.nav-menu {
  padding: 10px 30px 0 0;

  .nav-list {
    float: right;
  }

  .nav-list-item {
    padding-bottom: 15px;

    span {
      color: $unemphasized-color;
    }
  }

  .active-menu-item {
    color: $spotify-green;
  }
}

a:hover {
  color: $pandora-blue;
  text-decoration: none;
}

.underline, .underline:hover {
  text-decoration: underline;
}

.spotify {
  color: $spotify-green;
}

.pandora {
  color: $pandora-blue;
}

.error {
  color: $error;
}

.btn-primary {
  background-color: $pandora-blue;
  color: $background-color;
  border: none;
}

.btn-primary:hover {
  background-color: $spotify-green;
}

.btn-preloader {
  position: relative;

  .preloader {
    position: absolute;
    top: -1px;
    right: -45px;
    width: 32px;
    height: 32px;
    background-image: url(<%= asset_path('preloader_blue_32x32.gif') %>);
    background-repeat: no-repeat;
    background-position: left top;
    pointer-events: none;
  }

  .preloader-status {
    position: absolute;
    top: 6px;
    right: -125px;
    color: $spotify-green;
    pointer-events: none;
  }
}

.btn-sm .preloader {
  top: 1px;
  right: -35px;
  width: 26px;
  height: 26px;
  background-image: url(<%= asset_path('preloader_blue_26x26.gif') %>);
}

.vertical-divider {
  position: absolute;
  top: 0;
  bottom: 0;
  left: -1px;
  width: 1px;
  background-color: $unemphasized-color;

  .top-gradient, .bottom-gradient {
    position: absolute;
    left: 0;
    width: 1px;
    height: 100px;
    background-color: $background-color;
    background-repeat: no-repeat;
  }

  .top-gradient {
    top: 0;
    background-image: url('divider_gradient_top.png');
    background-position: left top;
  }

  .bottom-gradient {
    bottom: 0;
    background-image: url('divider_gradient_bottom.png');
    background-position: left bottom;
  }
}

form {
  margin-top: 15px;

  .short-width {
    width: 350px;
  }

  .form-group, button {
    margin-left: 20px;
  }
}

.zero-clipboard {
  position: relative;

  .copy-message {
    display: none;
    position: absolute;
    left: 35px;
    top: -45px;
    padding: 5px 10px;
    border-radius: 4px;
    background-color: $text-color;
    pointer-events: none;
  }
}

.zero-show-message .copy-message {
  display: block;
}

.zeroclipboard-is-hover {
  background-color: $spotify-green;
  color: $background-color;
}

.zero-clipboard .arrow-box:after {
	top: 100%;
	left: 50%;
	border: solid transparent;
	content: " ";
	height: 0;
	width: 0;
	position: absolute;
	pointer-events: none;
	border-color: rgba(51, 51, 51, 0);
	border-top-color: $text-color;
	border-width: 8px;
	margin-left: -8px;
}
