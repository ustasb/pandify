#pandify {
  position: relative;
  background-color: $background-color;
  font-family: 'Noto Sans', sans-serif;
  color: $text-color;

  input, .selectize-input {
    font-family: 'Noto Sans', sans-serif;
    color: $text-color;
  }
}

a {
  color: $text-color;
}

#master-container {
  min-width: $min-container-width;
}

#credit {
  position: absolute;
  top: 10px;
  right: 15px;

  a, span {
    color: $unemphasized-color;
    font-size: 0.8em;
  }

  a:hover {
    text-decoration: underline;
  }
}

#logo-header {
  padding: 20px 0;

  .logo {
    float: right;
    margin-right: -230px;
  }
}

#main-content {
  position: relative;
  padding: 10px 0 0 30px;
  min-height: 120px;
  // So that the section:before gradient sits where the border-left would be.
  border-left: 1px solid transparent;
}

.nav-menu {
  padding: 10px 30px 0 0;

  .nav-list {
    float: right;
  }

  .nav-list-item {
    padding-bottom: 15px;

    span {
      color: $unemphasized-color;
    }
  }

  .active-menu-item {
    color: $spotify-green;
  }
}

a:hover {
  color: $pandora-blue;
  text-decoration: none;
}

.underline, .underline:hover {
  text-decoration: underline;
}

.spotify {
  color: $spotify-green;
}

.pandora {
  color: $pandora-blue;
}

.error {
  color: $error;
}

.btn-primary {
  background-color: $pandora-blue;
  color: $background-color;
  border: none;
}

.btn-primary:hover {
  background-color: $spotify-green;
}

.btn-preloader {
  position: relative;

  .preloader {
    position: absolute;
    top: -1px;
    right: -45px;
    width: 32px;
    height: 32px;
    background-image: url(<%= asset_path('preloader_blue.gif') %>);
    background-repeat: no-repeat;
    background-position: left top;
  }

  .preloader-status {
    position: absolute;
    top: 6px;
    right: -125px;
    color: $spotify-green;
  }
}

.vertical-divider {
  position: absolute;
  top: 0;
  bottom: 0;
  left: -1px;
  width: 1px;
  background-color: $unemphasized-color;

  .top, .bottom {
    position: absolute;
    left: 0;
    width: 1px;
    height: 100px;
    background-color: $background-color;
    background-repeat: no-repeat;
  }

  .top {
    top: 0;
    background-image: url('divider_gradient_top.png');
    background-position: left top;
  }

  .bottom {
    bottom: 0;
    background-image: url('divider_gradient_bottom.png');
    background-position: left bottom;
  }
}

form {
  margin-top: 15px;

  .short-width {
    width: 350px;
  }

  .form-group, button {
    margin-left: 20px;
  }
}
