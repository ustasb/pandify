body {
  background-color: $background-color;
}

a {
  cursor: pointer;
}

a:hover {
  color: $pandora-blue;
  text-decoration: none;
}

body, a, input {
  font-family: 'Noto Sans', sans-serif !important;
  color: $text-color;
}

header {
  padding: 20px 0;

  img {
    display: block;
    float: right;
    margin-right: -230px;
  }
}

nav, section {
  padding: 10px 0px;
}

nav {
  ul {
    float: right;
    margin: 0 $side-padding 0 0;
  }

  li {
    padding-bottom: 15px;

    span {
      color: $divider-color;
    }
  }

  .active {
    color: $spotify-green;
  }
}

.spotify {
  color: $spotify-green;
}

.pandora {
  color: $pandora-blue;
}

.error {
  color: $error-red;
}

.container {
  min-width: $min-container-width;
}

form .btn {
  position: relative;

  .preloader {
    position: absolute;
    top: -1px;
    right: -45px;
    background-image: url(<%= asset_path('preloader_blue.gif') %>);
    background-repeat: no-repeat;
    background-position: left top;
    width: 32px;
    height: 32px;
  }
}

.info {
  display: inline-block;
  margin-left: 10px;
  color: $spotify-green;
}

.pandify section {
  border-left: 1px solid transparent; // So that the section:before gradient sits where the border-left would be.
  min-height: 120px
}

.vertical-divider {
  position: absolute;
  top: 0%;
  bottom: 0%;
  left: -1px;
  width: 1px;
  background-color: $divider-color;

  .top, .bottom {
    position: absolute;
    left: 0;
    width: 1px;
    height: 100px;
    background-color: $background-color;
    background-repeat: no-repeat;
  }

  .top {
    top: 0;
    background-image: url('divider_gradient_top.png');
    background-position: left top;
  }

  .bottom {
    bottom: 0;
    background-image: url('divider_gradient_bottom.png');
    background-position: left bottom;
  }
}

.pandify section > .angular-view {
  margin-left: $side-padding;
}

.pandify button {
  background-color: $pandora-blue;
  color: $background-color;
  border: none;
}

.pandify button:hover {
  background-color: $spotify-green;
}

.pandify {
  input[type=text], input[type=email], select, #configure-menu .selectize-control {
    width: 350px;
  }

  ::-webkit-input-placeholder { color: $placeholder-color; } // WebKit browsers
  :-moz-placeholder { color: $placeholder-color; opacity:  1; } // Mozilla Firefox 4 to 18
  ::-moz-placeholder { color: $placeholder-color; opacity:  1; } // Mozilla Firefox 19+
  :-ms-input-placeholder { color: $placeholder-color; } // Internet Explorer 10+

  form {
    margin-top: 15px;
  }

  .form-group, button {
    margin-left: 20px;
  }
}

#credit {
  position: absolute;
  top: 10px;
  right: 15px;
  color: $divider-color;
  font-size: 0.8em;

  a {
    color: $divider-color;
    text-decoration: underline;
  }

  a:hover {
    text-decoration: none;
  }
}
